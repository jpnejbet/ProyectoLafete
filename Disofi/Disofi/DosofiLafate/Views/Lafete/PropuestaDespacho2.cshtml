

@{
    ViewBag.Title = "Usuarios";
}




<script src="~/WebJs/HomeJs/Agrup.js"></script>
<script src="~/WebJs/HomeJs/Usuario.js"></script>
<link href="~/Content/Agrup.css" rel="stylesheet" />

<div class="right_col" role="main">
    <h3>@ViewBag.Message</h3>




    <div style="display: none;">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
            Id  Pedido  <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input type="text" id="txtIdPedido" value="-1" class="form-control col-md-7 col-xs-12">
         

        </div>
    </div>





    <div class="x_panel">
        <div class="x_title">
            <h2>Propuesta de Despacho</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                

                <div class="x_content">

                    <h2>Listado Producto para despacho</h2>




                    <form class="form-horizontal form-label-left input_mask">

                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="last-name">
                                Código Bodega    <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="txtLocal" value=@ViewBag.CodBodega  disabled="disabled" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="last-name">
                                Nombre Bodega    <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="txtNombreLocal" value='@ViewBag.NombreBodega' disabled="disabled" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10 col-sm-10 col-xs-12">
                                <label class="control-label col-md-8 col-sm-8 col-xs-12" for="last-name">
                                                     
                                </label>
                                <div>
                                    <button type="button" id="GenerarguimientoPedido" class="btn btn-primary">Generar la Orden de Picking</button>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="table-responsive">


                        @{
                            var grid = new WebGrid(Model, canPage: false);
                        }
                        @grid.GetHtml(
                                        htmlAttributes: new { id = "tblPropuestaDespacho" },
                                        tableStyle: "table table-striped table-bordered table-hover dataTables-example dataTable",
                                        columns:
                                        grid.Columns(
grid.Column(columnName: "CodigoGrupo", header: "CodigoGrupo", format: @<text>@item.CodigoGrupo</text>),
grid.Column(columnName: "Codigo", header: "Codigo", format: @<text>@item.Codigo</text>),
grid.Column(columnName: "Descripcion", header: "Descripcion", format: @<text>@item.Descripcion</text>),
grid.Column(columnName: "StockMinimo", header: "Stock Mínimo", format: @<text> @item.StockMinimo</text>),
grid.Column(columnName: "StockMaximo", header: "Stock Maximo", format: @<text> @item.StockMaximo</text>),
grid.Column(columnName: "StockMaximo", header: "Promedio", format: @<text> @item.StockMaximo</text>),
grid.Column(columnName: "Stock", header: "Stock Sugerido", format: @<text> @item.Stock</text>),
grid.Column("Stock", "Stock Picking", format: @<text><input type="text" id="Stock" value="@item.Stock" class="edit-mode" /></text>, style: "col2Width")
))



                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


