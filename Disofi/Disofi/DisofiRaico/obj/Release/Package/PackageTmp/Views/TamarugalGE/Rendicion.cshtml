@{
    ViewBag.Title = "Rendición Gasto";
}



<script src="~/WebJs/HomeJs/Tamarugal.js"></script>
<div class="right_col" role="main">
    <h3>@ViewBag.Message</h3>

    <div class="x_panel">
        <div class="x_title">
            <h2>Rendición Gasto</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
             


            <div class="x_content">
                <br />
                <form class="form-horizontal form-label-left input_mask">

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                            Nro Contrato
                        </label>
                        <div class="col-md-2 col-sm-2 col-xs-12">
                            <input id="txtNroCliente" disabled="disabled" class="form-control col-md-2 col-xs-12" type="text" name="middle-name">
                        </div>


                    </div>


                    <div class="form-group">

                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                            Nro Guía Expedición
                        </label>
                        <div class="col-md-2 col-sm-2 col-xs-12">
                            <input id="txtNroGuia" disabled="disabled" class="form-control col-md-2 col-xs-12" type="text" name="middle-name">
                        </div>


                        <label class="control-label col-md-1 col-sm-1 col-xs-12" for="first-name">
                            Nro Pedido
                        </label>
                        <div class="col-md-2 col-sm-2 col-xs-12">
                            <input id="txtNroPedido" disabled="disabled" class="form-control col-md-2 col-xs-12" type="text" name="middle-name">
                        </div>



                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                            Cliente
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="txtCliente" disabled="disabled" class="form-control col-md-2 col-xs-12" type="text" name="middle-name">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                            Servicio
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="txtServicio" disabled="disabled" class="form-control col-md-2 col-xs-12" type="text" name="middle-name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                            Ruta
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="TxtRuta" disabled="disabled" class="form-control col-md-2 col-xs-12" type="text" name="middle-name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                            Patente
                        </label>
                        <div class="col-md-2 col-sm-2 col-xs-12">
                            <input id="txtPatente" disabled="disabled" class="form-control col-md-2 col-xs-12" type="text" name="middle-name">
                        </div>




                    </div>




                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                            Seleccione Gasto <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @*@Html.DropDownList("cmbPeaje", (IEnumerable<SelectListItem>)ViewBag.cmbPeaje, "Seleccione...", new { @class = "form-control", @ID = "cmbPeaje" })*@


                            <select id="CmbRuta" class="form-control"></select>

                        </div>





                    </div>

                    <div class="form-group">


                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                            N° Boleta / Ticket <span class="required">*</span>
                        </label>
                        <div class="col-md-2 col-sm-2 col-xs-12">
                            <input id="txtNroTicket" class="form-control col-md-2 col-xs-12" type="text" name="middle-name">
                        </div>



                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                            Valor $ <span class="required">*</span>
                        </label>
                        <div class="col-md-2 col-sm-2 col-xs-12">
                            <input id="txtValorGasto" class="form-control col-md-2 col-xs-12" type="text" name="middle-name">
                        </div>

                        <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                            Fecha Rendición
                        </label>
                        <div class="col-md-2 col-sm-2 col-xs-12">
                            <input type="text" class="form-control has-feedback-left" id="single_cal4" name="FechaFinContrato" aria-describedby="inputSuccess2Status2">
                            <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                            <span id="inputSuccess2Status2" class="sr-only"></span>
                        </div>


                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button class="btn btn-primary" type="reset">Limpiar</button>
                            <button type="submit" class="btn btn-success" id="btnGrabarRendicionGasto">Grabar Gasto</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="row">
                <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="table-table-striped jambo_table bulk_action">
                        <div class="col-lg-12">
                            <table id="tbladeproductos" class="table table-striped table-bordered table-hover dataTables-example dataTable"></table>
                        </div>

                        @{
                            var grid = new WebGrid(Model, canPage: false);
                        }
                        @grid.GetHtml(
                                        htmlAttributes: new { id = "tblContrato" },
                                        exclusions: new[] { "IdConductor" },
                                        tableStyle: "table table-striped table-bordered table-hover dataTables-example dataTable",
                                        columns:
                                        grid.Columns(
    grid.Column(columnName: "NroContrato", header: "Nro Contrato", format: @<text>@item.NroContrato</text>),
grid.Column(columnName: "IdGuia", header: "Nro Guia", format: @<text>@item.IdGuia</text>),
grid.Column(columnName: "NumeroPedido", header: "Número Pedido", format: @<text>@item.NumeroPedido</text>),
grid.Column(columnName: "Conductor", header: "Conductor", format: @<text>@item.Conductor</text>),
grid.Column(columnName: "Cliente", header: "Cliente", format: @<text>@item.Cliente</text>),
grid.Column(columnName: "Servicio", header: "Servicio", format: @<text>@item.Servicio</text>),
grid.Column(columnName: "Patente", header: "Patente", format: @<text>@item.Patente</text>),
 grid.Column(columnName: "Ruta", header: "Ruta", format: @<text>@item.Ruta</text>), 
grid.Column(columnName: "Gasto", header: "Ver Gasto", format: @<button class="btn btn-success" type="button" data-toggle="modal" tooltip="Editar Parametro" data-target="#ModalRuta"
                                                                       onclick="GetBuscarDatosGasto('@item.NroContrato',@item.IdGuia,@item.NumeroPedido )">
                        Ver Gastos
                    </button>),
grid.Column(columnName: "Rendir", header: "Rendir", format: @<button class="btn btn-success" type="button"
                                                                     onclick="RendicionGuieExp(
                                                                               '@item.NroContrato',
                                                                               '@item.IdGuia',
                                                                               '@item.NumeroPedido',
                                                                               '@item.Servicio',
                                                                               '@item.Patente',
                                                                               '@item.PlacaNroRemolque',
                                                                                '@item.Cliente','@item.Ruta'
                                                                                 )">
                        Rendir
                    </button>)
))





                    </div>



                </form>
            </div>
        </div>
    </div>




</div>




<div id="ModalRuta" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Gasto Rendidos</h4>
            </div>
            <form class="form-horizontal form-label-left input_mask">
                <div class="col-lg-12">
                    <table id="tblConsultaGasto" class="table table-striped table-bordered table-hover dataTables-example dataTable"></table>

                </div>

            </form>
            <div class="modal-footer">
                <button type="button" id="btnCerrarModal" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
