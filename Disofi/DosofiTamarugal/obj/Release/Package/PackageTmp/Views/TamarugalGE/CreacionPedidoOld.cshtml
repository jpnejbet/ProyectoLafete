@{
    ViewBag.Title = "Guía Expedición";
}

<script src="~/WebJs/HomeJs/Tamarugal.js"></script>
<div class="right_col" role="main">
    <h3>@ViewBag.Message</h3>

    <div class="x_panel">
        <div class="x_title">
            <h2>Creación Pedido</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                     
                    @*<div class="form-group">
                            <label class="control-label col-md-2 col-sm-3 col-xs-12" for="first-name">
                                Seleccione Cliente <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.DropDownList("CmbCliente", (IEnumerable<SelectListItem>)ViewBag.CmbCliente, "Seleccione...", new { @class = "ConsultarCantidadToneladas form-control", @ID = "CmbCliente" })
                            </div>
                        </div>*@

                    <div style="display: none;">
                        @*<div class="form-group">*@
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                            Id Guia  <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="txtIdGE" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
                    <br />
                </form>
            </div>
            <div class="table-table-striped jambo_table bulk_action">
                <div class="col-lg-12">
                    <table id="tbladeproductos" class="table table-striped table-bordered table-hover dataTables-example dataTable"></table>
                </div>

                @{
                    var grid = new WebGrid(Model, canPage: false);
                }
                @grid.GetHtml(
htmlAttributes: new { id = "tblContrato" },
tableStyle: "table table-striped table-bordered table-hover dataTables-example dataTable",
columns:
grid.Columns(
 grid.Column(columnName: "NroContrato", header: "Nro Contrato", format: @<text>@item.NroContrato</text>),
    grid.Column(columnName: "NroServicio", header: "Nro Servicio", format: @<text>@item.IdServicio</text>),
  grid.Column(columnName: "Cliente", header: "Cliente", format: @<text>@item.Cliente</text>),
grid.Column(columnName: "Servicio", header: "Servicio", format: @<text>@item.Servicio</text>),
grid.Column(columnName: "TipoCarga", header: "Tipo Carga", format: @<text>@item.TipoCarga</text>),
grid.Column(columnName: "UnidadMedida", header: "Unidad Medida", format: @<text>@item.UnidadMedida</text>),
grid.Column(columnName: "Valor", header: "Valor", format: @<text>@item.Valor</text>),
 grid.Column(columnName: "Cantidad", header: "Cantidad", format: @<text>@item.Cantidad</text>),
grid.Column(columnName: "PedidoPor", header: "Pedido Por", format: @<button class="btn btn-success" type="button" data-toggle="modal" tooltip="Editar Parametro" data-target="#ModalRuta"
        onclick="BuscarDatosPedido(@item.IdServicio)">
    Pedido
</button>)
 ))



            </div>
        </div>
    </div>


</div>





<div id="ModalRuta" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Datos del pedido</h4>
            </div>
            <div class="modal-body">
                <h4>Ingrese los datos solicitados</h4>
                <div class="x_content">
                    <br />
                    <form class="form-horizontal form-label-left input_mask">


                        <div style="display: none;">
                            @*<div class="form-group">*@
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                Id Guia  <span class="">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">

                                <input type="text" id="txtIdServicio" class="form-control col-md-7 col-xs-12">
                                <input type="text" id="txtIdContrato" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
                   

                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-3 col-xs-12" for="first-name">
                                Cliente <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="txtCliente" disabled="disabled" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>




                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-3 col-xs-12" for="first-name">
                                Nombre Servicio <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="txtNombreServicio" disabled="disabled" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-3 col-xs-12" for="first-name">
                                Producto <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="txtProducto" disabled="disabled" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-3 col-xs-12" for="first-name">
                                Unidad Medidad <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="txtUnidadMedidad" disabled="disabled" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-3 col-xs-12" for="first-name">
                                Valor  <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="txtValor" disabled="disabled" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-3 col-xs-12" for="first-name">
                                Cantidad  <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="txtCantidad" disabled="disabled" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-3 col-xs-12" for="first-name">
                                Cantidad Pedido  <span class="required">*</span>
                            </label>
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                <input type="text" id="txtCantidadDespachos" class="form-control col-md-2 col-xs-12">
                            </div>
                        </div>



                        <br />
                        <br />
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="reset">Limpiar</button>
                                <button type="submit" class="btn btn-success" id="btnGrabarDatosPedido">Grabar</button>
                            </div>
                        </div>





                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCerrarModal" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


